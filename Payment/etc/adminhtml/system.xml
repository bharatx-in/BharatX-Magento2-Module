<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="bharatx" translate="label" sortOrder="2" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>BharatX</label>
                <field id="active" translate="label comment" sortOrder="1" type="select"
                    showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="frontendTitle" translate="label" type="text" sortOrder="2" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Frontend Title</label>
                </field>
                <field id="title_image" translate="label" type="text" sortOrder="3"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Title Image</label>
                </field>
                <field id="partner_id" translate="label" type="text" sortOrder="4"
                    showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Partner ID</label>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="5" showInDefault="1"
                    showInWebsite="1" showInStore="0">
                    <label>API Key</label>
                </field>
                <field id="enable_invoice" translate="label" type="select" sortOrder="6"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled Invoice</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="live" translate="label" type="select" sortOrder="7" showInDefault="1"
                    showInWebsite="1" showInStore="0">
                    <label>Live Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="new_order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="processing_order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Processing Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Processing</source_model>
                </field>
                 <field id="enable_cron" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Enable Cron</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>